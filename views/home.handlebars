<h1>Movie Reviews</h1>
<form action="/" method="post">
  <h2>Look up your movie!</h2>
  <input type="text" name="query">
  <input type="submit">
</form>
{{#each data.results}}
<a href="/movie/{{id}}">
  <article>
    <header>
      <h1>{{display_title}}</h1>
    </header>
    <p>{{summary_short}}</p>
  </article>
</a>
{{/each}}
