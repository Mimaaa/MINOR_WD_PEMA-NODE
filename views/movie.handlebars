<div class="movie">
  <article>
    <header>
      <img src="https://image.tmdb.org/t/p/w500{{data.poster_path}}"/>
    </header>
    <div class="flex">
      <section>
        <h1>{{data.original_title}}</h1>
        <p><em>"{{data.tagline}}"</em></p>
        <ul>
          <li>{{data.overview}}</li>
        </ul>
      </section>
      <section>
        <ul>
          <li>Rating: {{data.vote_average}}</li>
          <li>Votes: {{data.vote_count}}</li>
          <li>Revenue: {{data.revenue}}</li>
        </ul>
      </section>
      <section>
        <ul>
          <li>Status: {{data.status}}</li>
          <li>Released on {{data.release_date}}</li>
        </ul>
      </section>
    </div>
  </article>
</div>
